#: import MainLayout widgets.MainLayout
#: import ParamSelector widgets.ParamSelector
#: import os os


<ParamSelector>:
    active_: active_
    value_: value_
    date: date
    info: info
    orientation: "vertical"
    Label:
        id: date
        size_hint_x: None
        text_size: None, self.height
        width: self.texture_size[0]
        halign: "left"
    BoxLayout:
        Switch:
            id: active_
            group: "main"
            size_hint_x: None
            width: dp(90)
            active: True
            on_active: root.sound_off(self.active)
        Label:
            text: root.name
            size_hint_x: None
            width: dp(100)
        Label:
            id: value_
            ssize_hint_x: None
            width: dp(30)
    BoxLayout:
        Label:
            id: info



<MainLayout>:
    interactive_lay: interactive_lay
    selector_lay: selector_lay
    orientation: "vertical"
    chart: chart
    request_lines: request_lines
    padding: (20, 10, 20, 10)
    BoxLayout:
        size_hint_y: None
        height: dp(100)
        Label:
            size_hint_x: None
            width: dp(250)
            text: "Office\nweather"
            font_size: dp(40)
        BoxLayout:
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                BoxLayout:
                    Label:
                        text: "Request data lines"
                        font_size: dp(16)
                    BoxLayout:
                        TextInput:
                            id: request_lines
                            size_hint: None, None
                            size: dp(50), dp(35)
                            on_text: app.vm.update_request(self.text)

                    
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                BoxLayout:
                    Button:
                        text: "Request data"
                        on_release: app.vm.request_data()
                    BoxLayout:
                        size_hint_x: 0.2
                    Button:
                        text: "Configuration"
                        on_release: os.system("config.json")

    BoxLayout:
        size_hint_y: None
        height: dp(30)
    BoxLayout:
        BoxLayout:
            id: interactive_lay
            orientation: "vertical"
            BoxLayout:
                id: selector_lay
                size_hint_y: None
                height: dp(100)
            BoxLayout:
                id: chart


